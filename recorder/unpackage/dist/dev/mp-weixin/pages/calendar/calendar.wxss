.calendar-container {
  display: flex;
  flex-direction: column;
  position: fixed;
  width: 100%;
  height: 100%;
}
.calendar-container .header {
  height: 160rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.calendar-container .header .header-body {
  margin: 0 20rpx;
}
.calendar-container .week-header .calendar-rows, .calendar-container .week-header .calendar-cols, .calendar-container .week-header .calendar-rows:last-child {
  border: none;
}
.calendar-container .week-header.calendar-rows {
  height: 60rpx !important;
  line-height: 60rpx;
  flex-shrink: 0;
  flex-grow: 0;
}
.calendar-container .week-header .calendar-cols {
  color: #333;
}
.calendar-container .calendar-rows {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-around;
  height: 100px;
}
.calendar-container .calendar-rows:last-child {
  border-bottom: 1rpx solid #eee;
}
.calendar-container .calendar-cols {
  flex: 1;
  border-left: 1rpx solid #eee;
  border-top: 1rpx solid #eee;
  box-sizing: border-box;
  height: 100%;
  overflow: hidden;
  overflow-y: auto;
  text-align: center;
  color: #555;
  display: flex;
  align-items: center;
  flex-direction: column;
}
.calendar-container .calendar-cols:last-child {
  border-right: 1rpx solid #eee;
}
.calendar-container .calendar-cols .tag {
  width: 90%;
  border-radius: 60px;
  background: #FFE4BA;
  margin: 4rpx 0;
  height: 20px;
  line-height: 20px;
  font-size: 20rpx;
}
.calendar-container .calendar-cols .lunar {
  font-size: 12px;
  color: #999;
}
.calendar-container .calendar-body {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.calendar-container .today {
  color: #F53F3F;
}

